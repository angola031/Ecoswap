# Cloudflare Pages Headers Configuration
# Este archivo configura headers HTTP para optimizar el rendimiento y seguridad

/*
  # Cache Control
  Cache-Control: public, max-age=3600
  
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  
  # CORS para Supabase
  Access-Control-Allow-Origin: https://vaqdzualcteljmivtoka.supabase.co
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization, x-client-info, apikey
  
  # Cloudflare específico
  CF-Cache-Status: HIT
  CF-Ray: *

# Configuración específica para API routes
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization, x-client-info, apikey

# Configuración para archivos estáticos
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Configuración para imágenes
/images/*
  Cache-Control: public, max-age=86400

# Configuración para favicon
/favicon.ico
  Cache-Control: public, max-age=86400
